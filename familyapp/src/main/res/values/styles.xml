<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <!--Register Screen Input Style -->
    <style name="RegisterScreenInput">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:background">#eeeeee</item>
        <item name="android:padding">4dp</item>
        <item name="android:layout_gravity">left|center</item>
    </style>
    <style name="settings_main_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Life Story Lines</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Display1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingBottom">0dp</item>
    </style>
    <style name="settings_sub">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Headline</item>
        <item name="android:textColor">@color/subtext</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_marginTop">-7dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:textSize">17dp</item>
    </style>
    <!--Login Screen Style -->
    <style name="LoginScreenInput">
        <item name="android:layout_weight">0</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">10dip</item>
        <item name="android:ems">10</item>
        <item name="android:background">#eeeeee</item>
        <item name="android:padding">4dp</item>
    </style>

    <style name="GridCellTitle" parent="TextAppearance.AppCompat.Headline">
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:layout_width">140dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_gravity">left|top</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
